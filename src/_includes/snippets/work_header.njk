<header class="pb-4 mb-4">
  <div class="px-2">
    {% myProjectHeaderImage "" + cover,
    "ss" %}
  </div>
  <div class="col-12 container">
    {% block extraArticleHeader %}
      <div class="pt-3">
        <a class="link-fancy me-2" href= {{link1_url}}>
          <p class="fs-6 mb-0">{{ link1 }}</p>
        </a>
        <a class="link-fancy me-2" href= {{link2_url}}>
          <p class="fs-6 mb-0 ">{{ link2 }}</p>
        </a>
        <a class="link-fancy me-2" href= {{link3_url}}>
          <p class="fs-6 mb-0">{{ link3 }}</p>
        </a>
        <p class="display-3 pt-3 pb-0">{{ title }}</p>
        <p class="fs-5 text-muted">{{ subtitle }}</p>
      </div>
      {% set wc = content | striptags | wordcount %}

      <div>
        <div class="pt-5 row">

          <div class="col-12 col-lg-8">
            <p class="mb-1 fw-bold">
            Context
          </p>
            <p class="fs-5">
              {{context}}
            </p>
            <p class="mb-1 fw-bold">
              {{result_title}}
            </p>
            <p class="fs-5">
              {{result_content}}
            </p>
          </div>
          <div class="col-12 col-lg-4">
            <p class="mb-1 fw-bold">
              {{summary_title1}}
            </p>
            <p class="fs-5">
              {{summary1}}
            </p>
            <div></div>

            <p class="mb-1 fw-bold">
              {{summary_title2}}
            </p>
            <p class="fs-5">
              {{summary2}}
            </p>
            <p class="mb-1 fw-bold">
              {{summary_title3}}
            </p>
            <p class="fs-5">
              {{summary3}}
            </p>

          </div>

        </div>
      </div>

    {% endblock %}
  </header>